<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    
    {{>navbar}}


    <div class="container-fluid main_header">
        <div class="row">

            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">THURSDAY</p>
                        <p id="today_date">31 MARCH</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Temperature</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>

</body>


</html>